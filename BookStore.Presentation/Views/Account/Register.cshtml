@{
    ViewBag.Title = "Đăng ký";
}

<link rel="stylesheet" type="text/css" href="~/Assets/css/main-login.css">
<!--===============================================================================================-->

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
            <form class="login100-form validate-form flex-sb flex-w" action="javascript:void(0);" method="post" type="register">
                <span class="login100-form-title p-b-10">
                    ĐĂNG KÝ TÀI KHOẢN
                </span>

                <div class="row p-t-13 p-b-9">
                    <div class="col-md-6 pr-2">
                        <span class="txt1">
                            Họ
                        </span>
                        <div class="wrap-input100 validate-input" data-validate="Bạn chưa nhập họ">
                            <input class="input100" type="text" name="lastname">
                            <span class="focus-input100"></span>
                        </div>
                    </div>

                    <div class="col-md-6 pl-2">
                        <span class="txt1">
                            Tên
                        </span>
                        <div class="wrap-input100 validate-input" data-validate="Bạn chưa nhập tên">
                            <input class="input100" type="text" name="firstname">
                            <span class="focus-input100"></span>
                        </div>
                    </div>
                </div>

                <div class="p-t-13 p-b-9">
                    <span class="txt1">
                        Địa chỉ email
                    </span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Bạn chưa nhập email">
                    <input class="input100" type="text" name="email">
                    <span class="focus-input100"></span>
                </div>

                <div class="p-t-13 p-b-9">
                    <span class="txt1">
                        Mật khẩu
                    </span>
                </div>
                <div class="wrap-input100 validate-input mb-2" data-validate="Bạn chưa nhập mật khẩu">
                    <input class="input100" type="password" name="password">
                    <span class="focus-input100"></span>
                </div>

                <div class="p-t-13 p-b-9">
                    <span class="txt1">
                        Xác nhận mật khẩu
                    </span>
                </div>
                <div class="wrap-input100 validate-input mb-2" data-validate="Bạn chưa xác nhận mật khẩu">
                    <input class="input100" type="password" name="re-password">
                    <span class="focus-input100"></span>
                </div>

                <div class="container-login100-form-btn m-t-17">
                    <button class="login100-form-btn" type="submit">
                        Đăng ký
                    </button>
                </div>

                <div class="w-full text-center p-t-55">
                    <span class="txt2">
                        Bạn đã có tài khoản?
                    </span>

                    <a href="/dang-nhap" class="txt2 bo1">
                        Đăng nhập ngay
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>