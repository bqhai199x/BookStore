@model Product


<div class="row">
    <div class="col-md-6 col-lg-6 p-b-30">
        <div class="p-l-25 p-r-30 p-lr-0-lg">
            <div class="wrap-slick3 flex-sb flex-w">
                <div class="wrap-slick3-dots"></div>
                <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>
                <div class="slick3 gallery-lb">
                    @foreach (var item in Model.Images)
                    {
                        <div class="item-slick3" data-thumb="/Assets/images/products/@item.ImageURL">
                            <div class="wrap-pic-w pos-relative">
                                <img src="~/Assets/images/products/@item.ImageURL" alt="IMG-PRODUCT" style="height: 740px">

                                <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="/Assets/images/products/@item.ImageURL">
                                    <i class="fa fa-expand"></i>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <input id="productId" hidden value="@Model.ProductId" />

    <div class="col-md-6 col-lg-5 p-b-30">
        <div class="p-r-50 p-t-5 p-lr-0-lg">
            <h4 class="mtext-105 cl2 js-name-detail p-b-14">
                @Model.Name
            </h4>

            <span class="mtext-106 cl2">
                @Html.DisplayFor(x => x.Price) VNĐ
            </span>

            <p class="stext-102 cl3 p-t-23 text-justify">
                @Model.Description
                <span>
                    Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book
                </span>
            </p>

            <!--  -->
            <div class="p-t-33">
                <div class="flex-w flex-r-m p-b-10">
                    <div class="size-203 flex-l-m respon6">
                        Danh mục :
                    </div>
                    <div class="size-204 flex-w flex-m respon6-next p-l-5">
                        @Model.Category.Name
                    </div>
                </div>

                <div class="flex-w flex-r-m p-b-10">
                    <div class="size-203 flex-l-m respon6">
                        Tác giả :
                    </div>
                    <div class="size-204 flex-w flex-m respon6-next p-l-5">
                        @Model.Author
                    </div>
                </div>

                <div class="flex-w flex-r-m p-b-10">
                    <div class="size-203 flex-l-m respon6">
                        Nhà xuất bản :
                    </div>
                    <div class="size-204 flex-w flex-m respon6-next p-l-5">
                        @Model.Publisher.Name
                    </div>
                </div>
                <div class="flex-w flex-r-m p-b-20">
                    <div class="size-203 flex-l-m respon6">
                        Đánh giá :
                    </div>
                    <div class="size-204 flex-w flex-m respon6-next p-l-5">
                        <span class="fs-18 cl11">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i < ViewBag.RateAVG)
                                {
                                    <i class="zmdi zmdi-star"></i>
                                }
                                else if (i - 0.5 == ViewBag.RateAVG)
                                {
                                    <i class="zmdi zmdi-star-half"></i>
                                }
                                else
                                {
                                    <i class="zmdi zmdi-star-outline"></i>
                                }
                            }
                        </span>
                    </div>
                </div>

                <div class="flex-w flex-r-m p-b-10">
                    <div class="size-204 flex-w flex-m respon6-next">
                        <div class="wrap-num-product flex-w m-r-20 m-tb-10">
                            <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                <i class="fs-16 zmdi zmdi-minus"></i>
                            </div>

                            <input class="mtext-104 cl3 txt-center num-product" type="number" value="1">

                            <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                <i class="fs-16 zmdi zmdi-plus"></i>
                            </div>
                        </div>

                        <button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
                            Thêm vào giỏ hàng
                        </button>
                    </div>
                </div>
            </div>

            <!--  -->
            <div class="flex-w flex-m p-l-100 p-t-40 respon7">
                <div class="flex-m bor9 p-r-10 m-r-11">
                    <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 js-addwish-detail tooltip100" data-tooltip="Add to Wishlist">
                        <i class="zmdi zmdi-favorite"></i>
                    </a>
                </div>

                <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Facebook">
                    <i class="fa fa-facebook"></i>
                </a>

                <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Twitter">
                    <i class="fa fa-twitter"></i>
                </a>

                <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Google Plus">
                    <i class="fa fa-google-plus"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<script>

    /*==================================================================
        [ Slick3 ]*/
    $('.wrap-slick3').each(function () {
        $(this).find('.slick3').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            fade: true,
            infinite: true,
            autoplay: false,
            autoplaySpeed: 6000,

            arrows: true,
            appendArrows: $(this).find('.wrap-slick3-arrows'),
            prevArrow: '<button class="arrow-slick3 prev-slick3"><i class="fa fa-angle-left" aria-hidden="true"></i></button>',
            nextArrow: '<button class="arrow-slick3 next-slick3"><i class="fa fa-angle-right" aria-hidden="true"></i></button>',

            dots: true,
            appendDots: $(this).find('.wrap-slick3-dots'),
            dotsClass: 'slick3-dots',
            customPaging: function (slick, index) {
                var portrait = $(slick.$slides[index]).data('thumb');
                return '<img src=" ' + portrait + ' "/><div class="slick3-dot-overlay"></div>';
            },
        });
    });

    /*==================================================================
    [ +/- num product ]*/
    $('.btn-num-product-down').on('click', function () {
        var numProduct = Number($(this).next().val());
        if (numProduct > 0) $(this).next().val(numProduct - 1);
    });

    $('.btn-num-product-up').on('click', function () {
        var numProduct = Number($(this).prev().val());
        $(this).prev().val(numProduct + 1);
    });

    /*---------------------------------------------*/

    $('.js-addcart-detail').each(function () {
        var nameProduct = $(this).parent().parent().parent().parent().find('.js-name-detail').html();
        $(this).on('click', function () {
            $.ajax({
                url: "/Cart/AddToCart",
                type: "POST",
                data: {
                    "productId": $('#productId').val(),
                    "quantity": $('.num-product').val()
                },
                success: function (data) {
                    $('.header-cart-content').load("/Cart/QuickCart", function () {
                        $('.icon-header-noti').attr('data-notify', data)
                        swal(nameProduct, "đã được thêm vào giỏ hàng !", "success");
                    })
                },
                error: function (error) {
                    swal({
                        icon: 'error',
                        title: 'Bạn chưa đăng nhập !',
                        buttons: 'Đăng nhập',
                        text: 'Vui lòng đăng nhập để thực hiện chức năng này!',
                    }).then((value) => {
                        if (value) {
                            window.location = "/dang-nhap";
                        }
                    });
                }
            });
        });
    });

    $('.gallery-lb').each(function () { // the containers for all your galleries
        $(this).magnificPopup({
            delegate: 'a', // the selector for gallery item
            type: 'image',
            gallery: {
                enabled: true
            },
            mainClass: 'mfp-fade'
        });
    });
</script>