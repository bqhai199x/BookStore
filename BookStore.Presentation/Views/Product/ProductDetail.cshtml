@model Product

@{ ViewBag.Title = Model.Name; }

<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
            Trang chủ
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <a href="/cua-hang?searchStr=@Model.Category.Name" class="stext-109 cl8 hov-cl1 trans-04">
            @Model.Category.Name
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            @Model.Name
        </span>
    </div>
</div>

<!-- Product Detail -->
<section class="sec-product-detail bg0 p-t-30 p-b-60">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-6 p-b-30">
                <div class="p-l-25 p-r-30 p-lr-0-lg">
                    <div class="wrap-slick4 flex-sb flex-w">
                        <div class="wrap-slick4-dots"></div>
                        <div class="wrap-slick4-arrows flex-sb-m flex-w"></div>
                        <div class="slick4 gallery-lb">
                            @foreach (var item in Model.Images)
                            {
                                <div class="item-slick4" data-thumb="/Assets/images/products/@item.ImageURL">
                                    <div class="wrap-pic-w pos-relative">
                                        <a href="/Assets/images/products/@item.ImageURL" 0>
                                            <img src="/Assets/images/products/@item.ImageURL" alt="IMG-PRODUCT" style="max-height: 740px">
                                        </a>

                                        <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="/Assets/images/products/@item.ImageURL">
                                            <i class="fa fa-expand" id="x"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-5 p-b-30 m-l-60">
                <div class="p-r-50 p-t-5 p-lr-0-lg">
                    <h4 class="mtext-105 cl2 js-name-detail p-b-14 name">
                        @Model.Name
                    </h4>

                    <span class="mtext-106 cl2">
                        <span class="text-danger">@Html.DisplayFor(x => x.Price) VNĐ</span>
                    </span>

                    @if (Model.Description.IsNotBlank())
                    {
                        <p class="stext-102 cl3 p-t-23 sub-description">
                            @Model.SubDescription
                        </p>
                    }

                    <input id="detailId" hidden value="@Model.ProductId" />

                    <!--  -->
                    <div class="p-t-33">
                        <div class="flex-w flex-r-m p-b-10">
                            <div class="size-203 flex-l-m respon6">
                                Danh mục :
                            </div>
                            <div class="size-204 flex-w flex-m respon6-next p-l-5">
                                @Model.Category.Name
                            </div>
                        </div>

                        <div class="flex-w flex-r-m p-b-10">
                            <div class="size-203 flex-l-m respon6">
                                Tác giả :
                            </div>
                            <div class="size-204 flex-w flex-m respon6-next p-l-5">
                                @Model.Author
                            </div>
                        </div>

                        <div class="flex-w flex-r-m p-b-10">
                            <div class="size-203 flex-l-m respon6">
                                Nhà xuất bản :
                            </div>
                            <div class="size-204 flex-w flex-m respon6-next p-l-5">
                                @Model.Publisher.Name
                            </div>
                        </div>
                        <div class="flex-w flex-r-m p-b-20">
                            <div class="size-203 flex-l-m respon6">
                                Đánh giá :
                            </div>
                            <div class="size-204 flex-w flex-m respon6-next p-l-5">
                                <span class="fs-18 cl11">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= ViewBag.RateAVG)
                                        {
                                            <i class="zmdi zmdi-star"></i>
                                        }
                                        else if (i - 0.5 == ViewBag.RateAVG)
                                        {
                                            <i class="zmdi zmdi-star-half"></i>
                                        }
                                        else
                                        {
                                            <i class="zmdi zmdi-star-outline"></i>
                                        }
                                    }
                                </span>
                            </div>
                        </div>

                        <div class="flex-w flex-r-m p-b-10">
                            <div class="size-204 flex-w flex-m respon6-next">
                                <div class="wrap-num-product2 flex-w m-r-20 m-tb-10">
                                    <div class="btn-num-product2-down cl8 hov-btn3 trans-04 flex-c-m">
                                        <i class="fs-16 zmdi zmdi-minus"></i>
                                    </div>

                                    <input class="mtext-104 cl3 txt-center num-product2" type="number" name="num-product2" value="1">

                                    <div class="btn-num-product2-up cl8 hov-btn3 trans-04 flex-c-m">
                                        <i class="fs-16 zmdi zmdi-plus"></i>
                                    </div>
                                </div>

                                <button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
                                    Thêm vào giỏ hàng
                                </button>
                            </div>
                        </div>
                    </div>

                    <!--  -->
                    <div class="flex-w flex-m p-l-100 p-t-40 respon7">
                        <div class="flex-m bor9 p-r-10 m-r-11">
                            <button class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 js-addwish-detail tooltip100" data-tooltip="Yêu thích">
                                <i class="zmdi zmdi-favorite"></i>
                            </button>
                        </div>

                        <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Facebook">
                            <i class="fa fa-facebook"></i>
                        </a>

                        <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Twitter">
                            <i class="fa fa-twitter"></i>
                        </a>

                        <a href="#" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Google Plus">
                            <i class="fa fa-google-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="bor10 m-t-50 p-t-43 p-b-40">
            <!-- Tab01 -->
            <div class="tab01">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item p-b-10">
                        <a class="nav-link active" data-toggle="tab" href="#description" role="tab">Mô tả</a>
                    </li>

                    <li class="nav-item p-b-10">
                        <a class="nav-link" data-toggle="tab" href="#information" role="tab">Thông tin chi tiết</a>
                    </li>

                    <li class="nav-item p-b-10">
                        <a class="nav-link" data-toggle="tab" href="#reviews" id="reviewCount" role="tab">Đánh giá (@Model.Reviews.Count)</a>
                    </li>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content p-t-43">
                    <!-- - -->
                    <div class="tab-pane fade show active" id="description" role="tabpanel">
                        <div class="how-pos2 p-lr-15-md">
                            @if (Model.Description.IsNotBlank())
                            {
                                <p class="mtext-102 cl6 pb-2">@Model.Name</p>
                                <br />
                                <p class="stext-102 cl6 text-justify description">
                                    @(new HtmlString(HttpUtility.HtmlDecode((Model.Description))))
                                </p>
                            }
                        </div>
                    </div>

                    <!-- - -->
                    <div class="tab-pane fade" id="information" role="tabpanel">
                        <div class="row">
                            <div class="col-sm-10 col-md-8 col-lg-6 m-lr-auto">
                                <ul class="p-lr-28 p-lr-15-sm">
                                    <li class="flex-w flex-t p-b-7">
                                        <span class="stext-102 cl3 size-205">
                                            Thể loại
                                        </span>

                                        <span class="stext-102 cl6 size-206">
                                            @Model.Category.Name
                                        </span>
                                    </li>
                                    <li class="flex-w flex-t p-b-7">
                                        <span class="stext-102 cl3 size-205">
                                            Tác giả
                                        </span>

                                        <span class="stext-102 cl6 size-206">
                                            @Model.Author
                                        </span>
                                    </li>
                                    <li class="flex-w flex-t p-b-7">
                                        <span class="stext-102 cl3 size-205">
                                            Nhà xuất bản
                                        </span>

                                        <span class="stext-102 cl6 size-206">
                                            @Model.Publisher.Name
                                        </span>
                                    </li>
                                    <li class="flex-w flex-t p-b-7">
                                        <span class="stext-102 cl3 size-205">
                                            Số trang
                                        </span>

                                        <span class="stext-102 cl6 size-206">
                                            @Model.NumPage
                                        </span>
                                    </li>
                                    <li class="flex-w flex-t p-b-7">
                                        <span class="stext-102 cl3 size-205">
                                            Kích thước
                                        </span>

                                        <span class="stext-102 cl6 size-206">
                                            @Model.Size
                                        </span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- - -->
                    <div class="tab-pane fade" id="reviews" role="tabpanel">
                        <div class="row">
                            <div class="col-sm-10 col-md-8 col-lg-6 m-lr-auto">
                                <div class="p-b-30 m-lr-15-sm">
                                    <!-- Review -->
                                    <div id="review-content">
                                        @Html.Action("Review", "Product", new { productId = Model.ProductId })
                                    </div>

                                    @if (Session["Account"] == null)
                                    {
                                        <div class="text-center">
                                            <span>Bạn cần <a href="/dang-nhap">đăng nhập</a> để bình luận và đánh giá !</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="w-full">
                                            <!-- Add review -->
                                            <h5 class="mtext-108 cl2 p-b-7">
                                                Thêm nhận xét
                                            </h5>

                                            <div class="flex-w flex-m p-t-15 p-b-23">
                                                <span class="stext-102 cl3 m-r-16">
                                                    Đánh giá
                                                </span>

                                                <span class="wrap-rating fs-18 cl11 pointer">
                                                    <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                                                    <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                                                    <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                                                    <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                                                    <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                                                    <input class="dis-none" type="number" name="rating" id="rating">
                                                </span>
                                            </div>


                                            <div class="row p-b-25">
                                                <div class="col-12 p-b-5">
                                                    <label class="stext-102 cl3" for="review">Nội dung</label>
                                                    <textarea class="size-110 bor8 stext-102 cl2 p-lr-20 p-tb-10" id="review" name="review"></textarea>
                                                </div>
                                            </div>

                                            <button class="flex-c-m stext-101 cl0 size-112 bg7 bor11 hov-btn3 p-lr-15 trans-04 m-b-10 float-r send">
                                                Gửi
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="bg6 flex-c-m flex-w m-t-73 p-tb-15">
    </div>
</section>

@Html.Action("RelatedProduct", "Product",
    new { productId = Model.ProductId, categoryId = Model.CategoryId, author = Model.Author, publisherId = Model.PublisherId })

