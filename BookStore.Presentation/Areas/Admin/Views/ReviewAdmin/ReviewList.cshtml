@{
    ViewBag.Title = "Quản lý nhận xét";
}

@model IEnumerable<Review>

<script>
    document.getElementById('review-admin').classList.add('active');
</script>

<div>
    <!-- List product -->
    <table class="table table-product">
        <thead>
            <tr class="">
                <th scope="col" style="width: auto">Sản phẩm</th>
                <th scope="col" style="width: auto"></th>
                <th scope="col" style="width: auto">Tài khoản</th>
                <th scope="col" style="width: auto">Đánh giá</th>
                <th scope="col" style="width: 30%">Nội dung</th>
                <th scope="col" style="width: auto">Ngày tạo</th>
                <th scope="col" style="width: auto"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="~/Assets/images/products/@item.Product.Images.FirstOrDefault().ImageURL" width="100" height="140" /></td>
                    <td>@item.Product.Name</td>
                    <td>@item.Account.Email</td>
                    <td>
                        <span class="fs-18 cl11">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= item.Rating)
                                {
                                    <i class="zmdi zmdi-star"></i>
                                }
                                else
                                {
                                    <i class="zmdi zmdi-star-outline"></i>
                                }
                            }
                        </span>
                    </td>
                    <td class="text-justify">@item.Content</td>
                    <td>@item.CreatedTime</td>
                    <td>
                    </td>
                    <td class="text-center">
                        <button type="button" onclick="ReviewDelete(@item.ReviewId)" class="btn btn-danger">Xóa</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
