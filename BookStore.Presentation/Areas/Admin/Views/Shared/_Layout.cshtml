<!Doctype html>
<html lang="en">

<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" type="image/png" href="~/Assets/images/layouts/mini-logo.jpg" />
    @*<link rel="stylesheet" type="text/css" href="~/Assets/vendor/bootstrap/css/bootstrap.min.css">*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/fonts/linearicons-v1.0.0/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/css/style-admin.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/css/main.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/css/tofubook.css">

    <script src="~/Assets/vendor/jquery/jquery-3.2.1.min.js"></script>
</head>

<body>
    <div class="container-fluid d-flex pl-1">

        <nav id="sidebar">
            <div class="p-4">
                <h1><a href="/" class="logo">Tofu Books <span>Nhà sách Tofu</span></a></h1>
                <ul class="list-unstyled components mb-5">
                    <li id="statistic">
                        <a href="/trang-quan-tri"><span class="fa fa-home mr-3"></span>Thống kê</a>
                    </li>
                    <li id="order-admin">
                        <a href="/trang-quan-tri/quan-ly-don-hang"><span class="fa fa-shopping-cart mr-3"></span>Đơn hàng</a>
                    </li>
                    <li id="product-admin">
                        <a href="/trang-quan-tri/quan-ly-san-pham"><span class="fa fa-book mr-3"></span>Sản phẩm</a>
                    </li>
                    <li id="category-admin">
                        <a href="/trang-quan-tri/quan-ly-danh-muc"><span class="fa fa-th  mr-3"></span>Danh mục</a>
                    </li>
                    <li id="publisher-admin">
                        <a href="/trang-quan-tri/quan-ly-nha-xuat-ban"><span class="fa fa-cogs mr-3"></span>Nhà xuất bản</a>
                    </li>
                    @if (Base.Account != null && Base.Account.Role == RoleUser.Admin)
                    {
                        <li id="account-admin">
                            <a href="/trang-quan-tri/quan-ly-tai-khoan"><span class="fa fa-user mr-3"></span>Tài khoản</a>
                        </li>
                    }
                    <li id="coupon-admin">
                        <a href="/trang-quan-tri/quan-ly-ma-giam-gia"><span class="fa fa-gift mr-3"></span>Mã giảm giá</a>
                    </li>
                    <li id="review-admin">
                        <a href="/trang-quan-tri/quan-ly-nhan-xet"><span class="fa fa-comment mr-3"></span>Nhận xét</a>
                    </li>
                    <li id="feedback-admin">
                        <a href="/trang-quan-tri/quan-ly-hop-thu"><span class="fa fa-envelope mr-3"></span>Phản hồi</a>
                    </li>
                </ul>

                <div class="mb-5">
                    <button onclick="location.href='/dang-xuat'" class="btn btn-info"><span class="fa fa-sign-out mr-3"></span> Đăng xuất</button>
                </div>

                <div class="footer">
                    <p>
                        Copyright &copy;
                        <script>document.write(new Date().getFullYear());</script> Nhà sách Tofu <i class="icon-heart" aria-hidden="true"></i>
                        by <a href="https://fb.com/tofu19" target="_blank" style="color: #30e3ca;">Quang Hải</a>
                    </p>
                </div>

            </div>
        </nav>

        <!-- Page Content  -->

        <div id="content">
            <div class="p-4 p-md-5 pt-5">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/Assets/vendor/sweetalert/sweetalert.min.js"></script>
    <script src="~/Assets/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Assets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Assets/js/main-admin.js"></script>
</body>

</html>