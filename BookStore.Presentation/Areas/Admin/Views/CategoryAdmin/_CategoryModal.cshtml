@model Category

<script>
    document.getElementById('staticBackdropLabel').innerHTML = '@ViewBag.Label danh mục';
</script>

<div>
    <form id="categoryForm" method="post" action="/Admin/CategoryAdmin/CategoryUpsert">

        @Html.HiddenFor(model => model.CategoryId)

        <div class="form-row">
            <div class="form-group col-md-12">
                <label>Tên danh mục</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = "required" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label>Mô tả</label>
                @Html.TextAreaFor(model => model.Description, 7, 1, new { @class = "form-control" })
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success" id="btnSubmit">
                @ViewBag.Label
            </button>
        </div>
    </form>
</div>
