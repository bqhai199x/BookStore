@{
    ViewBag.Title = "Quản lý mã giảm giá";
}

@model IEnumerable<Coupon>

<!-- Button trigger modal -->
<div class="mb-5">
    <button type="button" class="btn btn-primary" onclick="CouponUpsert(0)">
        Thêm mã giảm giá
    </button>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-lr-50 p-b-30" id="myModalBodyDiv1">

            </div>
        </div>
    </div>
</div>

<div>
    <!-- List order -->
    <table class="table ">
        <thead>
            <tr>
                <th scope="col" style="width: auto">Mã</th>
                <th scope="col" style="width: auto">Chiết khấu</th>
                <th scope="col" style="width: auto">Số lượng</th>
                <th scope="col" style="width: auto">Ngày bắt đầu</th>
                <th scope="col" style="width: auto">Ngày kết thúc</th>
                <th scope="col" style="width: auto">Mô tả</th>
                <th scope="col" style="width: auto"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Discount</td>
                    <td>@item.Quantity</td>
                    <td>@item.StartDate.Value.ToString("d")</td>
                    <td>@item.EndDate.Value.ToString("d")</td>
                    <td class="text-justify">@item.Description</td>
                    <td class="text-center">
                        <button type="button" onclick="CouponUpsert(@item.CouponId)" class="btn btn-success mr-1">Sửa</button>
                        <button type="button" onclick="CouponDelete(@item.CouponId)" class="btn btn-danger">Xóa</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    document.getElementById('coupon-admin').classList.add('active');
</script>